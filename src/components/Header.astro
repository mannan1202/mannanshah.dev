---
import HeaderLink from './HeaderLink.astro';
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
console.log(currentPath);
---

<header>
  <!-- <h2>
		{SITE_TITLE}
	</h2> -->
  <nav class="flex justify-end space-x-2">
    <HeaderLink
      href="/"
      class={currentPath === ''
        ? 'text-[#FF4C29] underline'
        : 'text-white hover:text-[#FF4C29]'}
    >
      Home
    </HeaderLink>
    <HeaderLink
      href="/blog"
      class={currentPath === 'blog/' || currentPath === 'blog'
        ? 'text-[#FF4C29] underline'
        : 'text-white hover:text-[#FF4C29]'}
    >
      Blog
    </HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
